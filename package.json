{
  "name": "database-uni-chain",
  "version": "1.0.0",
  "description": "Database and UI for UNI Chain - User Profile & NFT Certificates",
  "private": true,
  "workspaces": [
    "web",
    "db"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "db:migrate": "pnpm --filter db migrate",
    "db:studio": "pnpm --filter db studio",
    "db:reset": "pnpm --filter db reset",
    "nft:read": "npx tsx readEduNFTScript.ts",
    "nft:cert": "npx tsx readCertNFTScript.ts",
    "nft:test": "node scripts/test-nft-script.js",
    "deploy:prepare": "cp -r db/prisma web/ && echo 'Prisma schema copied to web directory'",
    "deploy:build": "npm run deploy:prepare && cd web && npm run build",
    "deploy:env": "echo 'Copy these environment variables to Vercel:' && cat web/.env.example"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.1.2+sha256.19c17528f9ca20bd442e4ca42f00f1b9808a9cb419383cd04ba32ef19322aba7",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0"
  }
}